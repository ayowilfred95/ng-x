import React, { useState } from "react";
import { ethers } from "ethers";
import abi from "../utils/PatientHealthRecord.json";

function ViewMyRecords() {
    const contractAddress = "0x0c0458fd9C2dac9717c2a901d357050A7C596f77";
    const contractAbi = abi.abi;

   const[view, setView] = useState("");
   const [toggle, setToggle] = useState(false);

   async function viewRecord() {
    if(typeof window.ethereum == "undefined") {
        const provider = new ethers.provider.web3Provider(window.ethereum);
        const contract = new ethers.Contract(
            contractAddress, 
            contractAbi,
            provider
        );
        try{
            const data = await contract.viewMyRecords()
            setView(data)
            console.log('data: ', data);
        }catch (err) {
            console.log(err);
        }
        setToggle(!toggle);
    }
   }

  return (
    <div>
      <div>
      <h1>Hello</h1>
        <button
          className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-1 rounded-full"
          onClick={() => {
            viewMyRecords();
          }}
        >
          GetMyRecords
        </button>
      </div>
    </div>
  );
}

export default ViewMyRecords;
